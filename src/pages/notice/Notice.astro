---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SubLayout from "../../layouts/SubLayout.astro";
import SubBody from "../../layouts/SubBody.astro";

const datph2 = "소식";
const location = "공지사항";
const pageTitle = `홈>${datph2}>${location}`;
const idName = "Notice";

import "../../css/ui.css";

// 샘플 공지사항 데이터
const notices = [
  {
    id: 3,
    title: "2025년 1월 1일 시스템 오픈일2025년 1월 1일 시스템 오픈일2025년 1월 1일 시스템 오픈일2025년 1월 1일 시스템 오픈일",
    date: "2025.09.01",
    isImportant: true
  },
  {
    id: 2,
    title: "2025년 시스템 업데이트",
    date: "2025.09.02",
    isImportant: false
  },
  {
    id: 1,
    title: "공지사항 테스트",
    date: "2025.09.25",
    isImportant: false
  }
];
---

<BaseLayout pageTitle={pageTitle}>
	<SubLayout idName={idName} title={location} datph2={datph2}>
		<SubBody title={location}>
      <div class="subcontent">
        <!-- 검색 영역 -->
        <div class="search-section">
          <div class="search-form">
            <div class="search-input-group">
              <input 
                type="text" 
                class="search-input" 
                placeholder="제목 또는 내용을 입력하세요"
                id="searchKeyword"
              />
              <button type="button" class="search-btn">검색</button>
            </div>
          </div>
        </div>

        <!-- 공지사항 목록 -->
        <div class="notice-list-section">
          <div class="list-info">
            <span class="total-count">총 <strong>3</strong>건</span>
          </div>
          
          <div class="notice-table-wrap">
            <table class="notice-table">
              <caption class="hidden">공지사항 목록 - 순번, 공지내용, 작성일에 관련된 표</caption>
              <colgroup>
                <col style="width: 80px;">
                <col style="width: auto;">
                <col style="width: 120px;">
              </colgroup>
              <thead>
                <tr>
                  <th scope="col">순번</th>
                  <th scope="col">공지내용</th>
                  <th scope="col">작성일</th>
                </tr>
              </thead>
              <tbody>
                {notices.map((notice) => (
                  <tr>
                    <td class="text-center">{notice.id}</td>
                    <td class="title-cell">
                      <a href={`/notice/Notice-detail?id=${notice.id}`} class="notice-link">
                        {notice.title}
                      </a>
                    </td>
                    <td class="text-center date-cell">{notice.date}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>

          <!-- 페이지네이션 -->
          <div class="pagination-wrap">
            <div class="pagination">
              <a href="#" class="page-btn prev-btn" aria-label="이전 페이지">
                <img src="../assets/images/icon/arrow-left.svg" alt="이전" />
              </a>
              <div class="page-numbers">
                <a href="#" class="page-num active">1</a>
                <a href="#" class="page-num">2</a>
                <a href="#" class="page-num">3</a>
                <a href="#" class="page-num">4</a>
                <a href="#" class="page-num">5</a>
              </div>
              <a href="#" class="page-btn next-btn" aria-label="다음 페이지">
                <img src="../assets/images/icon/arrow-right.svg" alt="다음" />
              </a>
            </div>
          </div>
        </div>
      </div>
		</SubBody>
	</SubLayout>
</BaseLayout>

