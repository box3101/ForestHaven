---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SubLayout from "../../layouts/SubLayout.astro";
import SubHeader from "../../layouts/SubHeader.astro";
import SubBody from "../../layouts/SubBody.astro";
import Card from "../../components/Card.astro";
import PagingNavigation from "../../components/PagingNavigation.astro";

const datph2 = "수강신청";
const location = "수강신청";
const pageTitle = `홈>${datph2}>${location}`;

import "../../css/ui.css";
---


<BaseLayout pageTitle={pageTitle}>
	<SubLayout>
		<SubHeader datph2={datph2} title={location} />
		<SubBody>
			<!-- 검색바 -->
			<div class="searchArea">
				<div class="searchArea__info">
					<div class="searchArea__top">
						<div class="searchArea__top-arr">
							<div class="searchArea__tit">
								<label for="a1">강의명</label>
							</div>
							<div class="searchArea__input">
								<input
									type="text"
									id="a1"
									class="comInput"
									placeholder="검색어를 입력하세요."
								/>
							</div>
						</div>
						<ul class="searchArea__btnWrap">
							<li>
								<button
									type="button"
									class="comBtn bgMain sizeMid bgSearch modalBtn"
									data-id="alert1"
									data-popup="accessibility">검색</button
								>
							</li>
							<!-- popup div에 role=dialog를 넣어주어 해당 요소가 popup 요소라는 것을 알려준다. -->
							<li>
								<button
									type="button"
									class="comBtn bgBlack sizeMid bgSearch2 detailedSearch"
									>상세 검색</button
								>
							</li>
						</ul>
					</div>
					<!-- 상세 검색 내용 -->
					<div class="searchArea__box">
						<div class="comSearchTable-1 flex">
							<table>
								<caption class="hidden">
									상태, 교육기간, 수강료, 분야, 대상, 지역, 강좌명에 관련된 표
								</caption>
								<col width="10%" />
								<col width="200px" />
								<col width="8%" />
								<col width="auto" />
								<tr>
									<th scope="row">상태</th>
									<td>
										<div class="formRadio flex gap5">
											<div class="row">
												<input
													type="radio"
													id="c1"
													name="chk1_01"
													value="1"
													checked=""
												/>
												<label for="c1"> 전체</label>
											</div>
											<div class="row">
												<input type="radio" id="c2" name="chk1_01" value="2" />
												<label for="c2"> 접수중</label>
											</div>
										</div>
									</td>
									<th>교육기간</th>
									<td>
										<div class="inputDateWrap ml20">
											<span class="input-date-wrap">
												<label for="beginDt" class="hidden">시작일자</label>
												<input
													type="text"
													id="beginDt"
													name="beginDt"
													class="setDatepicker from form-input input-date input-date-start"
													title="검색시작일자 입력 예시 yyyy.mm.dd"
													placeholder="yyyy-mm-dd"
													value=""
												/>
											</span>
											<span class="split">~</span>
											<span class="input-date-wrap">
												<label for="endDt" class="hidden">종료일자</label>
												<input
													type="text"
													id="endDt"
													name="endDt"
													class="setDatepicker to form-input input-date input-date-end"
													title="검색종료일자 입력 예시 yyyy.mm.dd"
													placeholder="yyyy-mm-dd"
													value=""
												/>
											</span>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">수강료</th>
									<td colspan="3">
										<div class="formRadio flex gap5">
											<div class="row">
												<input
													type="radio"
													id="d1"
													name="chk1_03"
													value="1"
													checked=""
												/>
												<label for="d1"> 전체</label>
											</div>
											<div class="row">
												<input type="radio" id="d2" name="chk1_03" value="2" />
												<label for="d2"> 유료</label>
											</div>
											<div class="row">
												<input type="radio" id="d3" name="chk1_03" value="2" />
												<label for="d3"> 무료</label>
											</div>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">기관그룹</th>
									<td>
										<div class="comSelectBox w160">
											<label for="c3"></label>
											<select name="" id="c3" class="comSelect">
												<option value="">기관그룹</option>
												<option value="">기관그룹</option>
											</select>
										</div>
									</td>
									<th scope="row">기관</th>
									<td>
										<div class="comSelectBox w160">
											<label for="d3"></label>
											<select name="" id="d3" class="comSelect">
												<option value="">기관</option>
												<option value="">기관</option>
											</select>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">분야</th>
									<td colspan="3">
										<div class="formChkbox flex gap5 aiCenter">
											<label
												class="formChkbox__control control--checkbox"
												for="f1"
												>전체
												<input type="checkbox" id="f1" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="f2"
											>
												건강/스포츠
												<input type="checkbox" id="f2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="f3"
											>
												어학
												<input type="checkbox" id="f3" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="f4"
											>
												취업/창업
												<input type="checkbox" id="f4" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="f5"
											>
												어린이
												<input type="checkbox" id="f5" />
											</label>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">대상</th>
									<td colspan="3">
										<div class="formChkbox flex gap5 aiCenter">
											<label
												class="formChkbox__control control--checkbox"
												for="b1"
												>전체
												<input type="checkbox" id="b1" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												유아
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												청소년
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												성인
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												장애인
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												외국인
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												직장인
												<input type="checkbox" id="b2" />
											</label>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row">지역</th>
									<td colspan="3">
										<div class="formChkbox flex gap5 aiCenter">
											<label
												class="formChkbox__control control--checkbox"
												for="b1"
												>전체
												<input type="checkbox" id="b1" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												신포동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												연안동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												신흥동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												도원동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												율목동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												동인천동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												북성동
												<input type="checkbox" id="b2" />
											</label>
											<label
												class="formChkbox__control control--checkbox"
												for="b2"
											>
												송월동
												<input type="checkbox" id="b2" />
											</label>
										</div>
									</td>
								</tr>
								<tr>
									<th scope="row"><label for="d1">강좌명</label></th>
									<td colspan="3">
										<input type="text" id="d1" class="comInput" />
									</td>
								</tr>
							</table>
							<ul class="BottomBtnWrap flex gap5 aiCenter jcCenter">
								<li>
									<button type="button" class="comBtn sizeXlg bgMain bgSearch"
										>검색</button
									>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<!-- 검색바 eee -->

			<p class="txt-top">총 <span>124</span>개의 강의가 있습니다</p>

			<!-- 카드 컨텐츠 -->
			<div class="cardcontent-wrap">
				<ul class="flex gap24">
					<Card
						src="https://via.placeholder.com/332x208"
						alt="수강신청상세 이미지"
						href="CourseRegistrationDetailed.html"
						txt="(유료, 선착순) 유료 선착순 무통장입금"
						chipType1="deadline"
						chipType2="pay"
					/>
					<Card
						src="https://via.placeholder.com/332x208"
						link="link"
						alt="수강신청상세 이미지"
						href="CourseRegistrationDetailed.html"
						txt="한글자 자ㅏ자자"
						chipType1="free"
						chipType2="pay"
					/>
					<Card
						src="https://via.placeholder.com/332x208"
						link="link"
						alt="수강신청상세 이미지"
						href="CourseRegistrationDetailed.html"
						txt="한글자 자ㅏ자자"
						chipType1="deadline"
						chipType2="receipt"
					/>
					<Card
						src="https://via.placeholder.com/332x208"
						link="link"
						alt="수강신청상세 이미지"
						href="CourseRegistrationDetailed.html"
						txt="한글자 자ㅏ자자"
						chipType1="deadline"
						chipType2="pay"
					/>
				</ul>
			</div>
			<!-- 카드 컨텐츠 eee -->

			<!-- 페이징 -->
			<PagingNavigation />
			<!-- 페이징 eee -->
		</SubBody>
	</SubLayout>
</BaseLayout>
