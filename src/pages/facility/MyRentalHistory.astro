							<option value="">기준년도 선택</option>
							<option value="2025" selected>2025년</option>
							<option value="2024">2024년</option>
							<option value="2023">2023년</option>
							<option value="2022">2022년</option>
						</select>
						<button type="button" class="search-btn">검색</button>
					</div>
				</div>

				<!-- 나의 대관조회 목록 -->
				<div class="notice-list-section">
					<div class="list-info">
						<span class="total-count">총 <strong>3</strong>건</span>
					</div>

					<div class="notice-table-wrap">
						<table class="notice-table">
							<caption class="hidden"
								>나의 대관조회 목록 - 순번, 공지내용, 작성일에 관련된 표</caption
							>
							<colgroup>
								<col style="width: 10%;" />
								<col style="width: auto;" />
								<col style="width: 15%;" />
								<col style="width: 15%;" />
								<col style="width: 15%;" />
								<col style="width: 10%;" />
							</colgroup>
							<thead>
								<tr>
									<th scope="col">순번</th>
									<th>단체명</th>
									<th>예약일</th>
									<th>대관일</th>
									<th>대관시간</th>
									<th>상태</th>
								</tr>
							</thead>
							<tbody>
								{
									rentalHistory.map((notice) => (
										<tr>
											<td class="text-center">{notice.id}</td>
											<td>{notice.organizationName}</td>
											<td class="text-center">{notice.reservationDate}</td>
											<td class="text-center">{notice.rentalDate}</td>
											<td class="text-center">{notice.rentalTime}</td>
											<td class="text-center">
												{notice.status}
												{notice.statusBtn && (
													<button type="button" class="com-btn size-sm state-cancel">
														{notice.statusBtn}
													</button>
												)}
											</td>
										</tr>
									))
								}
							</tbody>
						</table>
					</div>

					<!-- 페이지네이션 -->
					<div class="pagination-wrap">
						<div class="pagination">
							<a href="#" class="page-btn prev-btn" aria-label="이전 페이지">
								<img src="../assets/images/icon/arrow-left.svg" alt="이전" />
							</a>
							<div class="page-numbers">
								<a href="#" class="page-num active">1</a>
