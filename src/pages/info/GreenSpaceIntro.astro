---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SubLayout from "../../layouts/SubLayout.astro";
import SubBody from "../../layouts/SubBody.astro";

const datph2 = "녹지 소개";
const location = "녹지소개";
const pageTitle = `홈>${datph2}>${location}`;
const idName = "GreenSpaceIntro";

import "../../css/ui.css";

// 시설예약
export interface facility {
	image: string;
	title: string;
	facilityType: {
		boldTitle: string;
		normalText: string;
	};
	managerType: {
		boldTitle: string;
		normalText: string;
	};
	link?: string;
	infoLink?: string;
}

export const facility: facility[] = [
	{
		image: "/img/card_img01.png",
		title: "융합1체육공원 풋살장 2구장",
		facilityType: {
			boldTitle: "사용시설",
			normalText: "풋살장 2구장"
		},
		managerType: {
			boldTitle: "관리기관",
			normalText: "포항시 푸른도시사업단 공원과 (054-270-5733573357335733)"
		},
		link: "/facility/1",
		infoLink: "/facility/1",
	},
	{
		image: "/img/card_img01.png",
		title: "융합1체육공원 풋살장 1구장",
		facilityType: {
			boldTitle: "사용시설",
			normalText: "풋살장 2구장"
		},
		managerType: {
			boldTitle: "관리기관",
			normalText: "포항시 푸른도시사업단 공원과 (054-270-5733)"
		},
		link: "/facility/2",
		infoLink: "/facility/2",
	},
	{
		image: "/img/card_img02.png",
		title: "송도 솔밭 물빛누리공원",
		facilityType: {
			boldTitle: "사용시설",
			normalText: "풋살장 2구장"
		},
		managerType: {
			boldTitle: "관리기관",
			normalText: "포항시 푸른도시사업단 그린웨이추진과 (054-270-5733)"
		},
		link: "/facility/3",
		infoLink: "/facility/3",
	},
];
---

<BaseLayout pageTitle={pageTitle}>
	<SubLayout idName={idName} title={location} datph2={datph2}>
		<SubBody title={location}>
			<!-- 검색 영역 -->
			<div class="search-section">
				<div class="search-form">
					<div class="search-input-group">
						<span class="title-name">대관시설</span>
						<input
							type="text"
							class="search-input"
							placeholder="시설 명을 입력하세요."
							id="searchKeyword"
						/>
						<button type="button" class="search-btn">검색</button>
					</div>
				</div>
			</div>

			<!-- 카드영역 -->
			<div class="facility-list">
				{facility.map((facility) => (
					<div class="facility-item">
						<div class="facility-image">
							<img src={facility.image} alt={facility.title} />
						</div>
						<div class="facility-info">
							<h3>{facility.title}</h3>
							<ul class="facility-details">
								<li>
									<h3 class="tit-bold">{facility.facilityType.boldTitle}</h3>
									<span class="tit-default">{facility.facilityType.normalText}</span>
								</li>
								<li>
									<h3 class="tit-bold">{facility.managerType.boldTitle}</h3>
									<span class="tit-default">{facility.managerType.normalText}</span>
								</li>
							</ul>
							<div class="facility-buttons">
								<a href={facility.infoLink} class="btn-info">시설안내</a>
								<a href={facility.link} class="btn-write">대관신청</a>
							</div>
						</div>
					</div>
				))}
			</div>
		</SubBody>
	</SubLayout>
</BaseLayout>
