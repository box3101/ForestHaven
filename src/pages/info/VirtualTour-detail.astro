<script is:inline define:vars={{ tabFacilities }}>
	const tabs = document.querySelectorAll(".virtualTour-Tabs li");
	const contents = document.querySelectorAll(".virtualTour-Contents .content");
	const swiperInstances = [];

	// 탭 클릭 이벤트
	tabs.forEach((tab) => {
		tab.addEventListener("click", function (e) {
			e.preventDefault();
			const tabValue = this.dataset.tab;

			tabs.forEach((t) => t.classList.remove("active"));
			contents.forEach((c) => c.classList.remove("active"));

			this.classList.add("active");
			const activeContent = document.querySelector(`[data-content="${tabValue}"]`);
			activeContent?.classList.add("active");

			if (activeContent) {
				const swiperContainer = activeContent.querySelector('[id^="facilitySwiper-"]');
				if (swiperContainer?.swiper) {
					setTimeout(() => {
						swiperContainer.swiper.update();
						const tabIndex = swiperContainer.id.split("-")[1];
						updatePaginationFraction(swiperContainer.swiper, tabIndex);
					}, 50);
				}
			}
		});
	});

	// Swiper 초기화
	function initSwiper(containerId, tabIndex) {
		const swiperContainer = document.getElementById(containerId);
		if (!swiperContainer || swiperContainer.swiper) return swiperContainer?.swiper;

		const swiper = new Swiper(`#${containerId}`, {
			spaceBetween: 32,
			loop: false,
			speed: 300,
			grabCursor: true,
			observer: true,
			observeParents: true,
			autoplay: { delay: 3000, disableOnInteraction: false },
			navigation: {
				nextEl: `.related-next-${tabIndex}`,
				prevEl: `.related-prev-${tabIndex}`,
			},
			pagination: {
				el: `.related-pagination-${tabIndex}`,
				clickable: true,
			},
			breakpoints: {
				320: { slidesPerView: 1, spaceBetween: 0 },
				600: { slidesPerView: 2, spaceBetween: 32 },
			},
			on: {
				init: function () {
					updateActiveCard(this, tabIndex);
					updatePaginationFraction(this, tabIndex);
					manageNavigationVisibility(this, this.slides.length, this.params.slidesPerView, tabIndex);
				},
				slideChange: function () {
					updateActiveCard(this, tabIndex);
					updatePaginationFraction(this, tabIndex);
				},
				resize: function () {
					this.update();
					manageNavigationVisibility(this, this.slides.length, this.params.slidesPerView, tabIndex);
				},
			},
		});

		return swiper;
	}

	function manageNavigationVisibility(swiperInstance, total, visible, tabIndex) {
		const prevBtn = document.querySelector(`.related-prev-${tabIndex}`);
		const nextBtn = document.querySelector(`.related-next-${tabIndex}`);
		const pagination = document.querySelector(`.related-pagination-${tabIndex}`);

		const shouldHide = total <= visible;
		[prevBtn, nextBtn, pagination].forEach(el => {
			el?.classList.toggle('navigation-hidden', shouldHide);
			el?.classList.toggle('pagination-hidden', shouldHide);
		});
	}

	function updateActiveCard(swiperInstance, tabIndex) {
		swiperInstance.slides.forEach((slide, index) => {
			slide.querySelector(".facility-card")?.classList.toggle("active", index === swiperInstance.activeIndex);
		});
	}

	function updatePaginationFraction(swiperInstance, tabIndex) {
		const currentSlide = document.querySelector(`.current-slide-${tabIndex}`);
		const totalSlides = document.querySelector(`.total-slides-${tabIndex}`);

		if (currentSlide && totalSlides) {
			currentSlide.textContent = swiperInstance.activeIndex + 1;
			totalSlides.textContent = swiperInstance.slides?.length || 0;
		}
	}

	// 콘텐츠 업데이트
	function updateFacilityContent(tabIndex, facilityData) {
		const contentArea = document.querySelector(`[data-content-area="content-${tabIndex}"]`);
		if (!contentArea) return;

		// 텍스트 업데이트
		const descriptionText = contentArea.querySelector(".description-text");
		if (descriptionText) descriptionText.textContent = facilityData.description;

		// 대관시설 버튼
		const rentalButton = document.querySelector(`.rental-facility-btn-${tabIndex}`);
		if (rentalButton) {
			rentalButton.style.display = facilityData.hasRentalFacility ? "" : "none";
			if (facilityData.hasRentalFacility) rentalButton.href = facilityData.link;
		}

		// Swiper 재생성
		const swiperContainer = document.getElementById(`facilitySwiper-${tabIndex}`);
		if (swiperContainer?.swiper) {
			swiperContainer.swiper.destroy(true, true);

			const slidesHTML = facilityData.images.map((image, index) => `
				<div class="swiper-slide LFimage">
					<div class="facility-card ${index === 0 ? "active" : ""}">
						<img src="${image.src}" alt="${image.alt}" loading="lazy" />
					</div>
				</div>
			`).join('');

			const swiperWrapper = swiperContainer.querySelector(".swiper-wrapper");
			if (swiperWrapper) swiperWrapper.innerHTML = slidesHTML;

			setTimeout(() => {
				const newSwiper = initSwiper(`facilitySwiper-${tabIndex}`, tabIndex);
				const instanceIndex = swiperInstances.findIndex(s => s?.el?.id === `facilitySwiper-${tabIndex}`);
				if (instanceIndex !== -1) swiperInstances[instanceIndex] = newSwiper;

				// 자동재생 토글 재설정
				const autoplayToggle = document.querySelector(`.autoplay-toggle-${tabIndex}`);
				if (autoplayToggle && newSwiper) {
					const newToggle = autoplayToggle.cloneNode(true);
					autoplayToggle.parentNode.replaceChild(newToggle, autoplayToggle);
					newToggle.classList.add("playing");
					newToggle.addEventListener("click", () => {
						if (newSwiper.autoplay.running) {
							newSwiper.autoplay.stop();
							newToggle.classList.remove("playing");
							newToggle.classList.add("paused");
						} else {
							newSwiper.autoplay.start();
							newToggle.classList.remove("paused");
							newToggle.classList.add("playing");
						}
					});
				}
			}, 50);
		}
	}

	// 마커 클릭 이벤트
	function initMarkerClickEvents() {
		document.querySelectorAll(".map-marker").forEach((marker) => {
			marker.addEventListener("click", function (e) {
				e.preventDefault();
				const markerId = this.dataset.markerId;
				const tabIndex = parseInt(this.dataset.tabIndex);
				const contentElement = document.querySelector(`[data-tab-index="${tabIndex}"]`);

				if (!contentElement) return;

				const facilities = tabFacilities[contentElement.dataset.content];
				const facilityData = facilities?.find((f) => f.id === markerId);

				if (!facilityData) return;

				updateFacilityContent(tabIndex, facilityData);

				// 마커 active 업데이트
				document.querySelectorAll(`.map-marker[data-tab-index="${tabIndex}"]`)
					.forEach((m) => m.classList.remove("active"));
				this.classList.add("active");
			});
		});
	}

	// 모바일 셀렉트 박스
	function initMobileFacilitySelect() {
		// 셀렉트 토글
		document.querySelectorAll('.select-trigger').forEach(trigger => {
			trigger.addEventListener('click', function(e) {
				e.stopPropagation();
				const tabIndex = this.dataset.tabIndex;
				const optionsList = document.querySelector(`.select-options[data-options-tab="${tabIndex}"]`);
				const isOpen = optionsList?.classList.contains('open');

				// 모든 셀렉트 닫기
				document.querySelectorAll('.select-options').forEach(opt => opt.classList.remove('open'));
				document.querySelectorAll('.select-trigger').forEach(trig => trig.classList.remove('active'));

				// 현재 셀렉트 토글
				if (!isOpen && optionsList) {
					optionsList.classList.add('open');
					this.classList.add('active');
				}
			});
		});

		// 옵션 선택
		document.querySelectorAll('.select-option').forEach(option => {
			option.addEventListener('click', function(e) {
				e.stopPropagation();
				const facilityId = this.dataset.facilityId;
				const tabIndex = parseInt(this.dataset.tabIndex);
				const contentElement = document.querySelector(`[data-tab-index="${tabIndex}"]`);

				if (!contentElement) return;

				const facilities = tabFacilities[contentElement.dataset.content];
				const facilityData = facilities?.find(f => f.id === facilityId);

				if (!facilityData) return;

				updateFacilityContent(tabIndex, facilityData);

				// UI 업데이트
				document.querySelectorAll(`.select-option[data-tab-index="${tabIndex}"]`)
					.forEach(opt => opt.classList.remove('selected'));
				this.classList.add('selected');

				const trigger = document.querySelector(`.select-trigger[data-tab-index="${tabIndex}"]`);
				const selectedText = trigger?.querySelector('.selected-text');
				if (selectedText) selectedText.textContent = facilityData.title;

				// 셀렉트 닫기
				const optionsList = document.querySelector(`.select-options[data-options-tab="${tabIndex}"]`);
				optionsList?.classList.remove('open');
				trigger?.classList.remove('active');

				// 마커 active 업데이트
				document.querySelectorAll(`.map-marker[data-tab-index="${tabIndex}"]`)
					.forEach(m => m.classList.remove('active'));
				document.querySelector(`.map-marker[data-marker-id="${facilityId}"][data-tab-index="${tabIndex}"]`)
					?.classList.add('active');
			});
		});

		// 외부 클릭 시 닫기
		document.addEventListener('click', () => {
			document.querySelectorAll('.select-options').forEach(opt => opt.classList.remove('open'));
			document.querySelectorAll('.select-trigger').forEach(trig => trig.classList.remove('active'));
		});
	}

	// 모든 Swiper 초기화
	function initAllSwipers() {
		document.querySelectorAll('[id^="facilitySwiper-"]').forEach((container) => {
			const tabIndex = container.id.split("-")[1];
			const swiper = initSwiper(container.id, tabIndex);

			if (swiper) {
				swiperInstances.push(swiper);

				const autoplayToggle = document.querySelector(`.autoplay-toggle-${tabIndex}`);
				if (autoplayToggle) {
					autoplayToggle.classList.add("playing");
					autoplayToggle.addEventListener("click", () => {
						if (swiper.autoplay.running) {
							swiper.autoplay.stop();
							autoplayToggle.classList.remove("playing");
							autoplayToggle.classList.add("paused");
						} else {
							swiper.autoplay.start();
							autoplayToggle.classList.remove("paused");
							autoplayToggle.classList.add("playing");
						}
					});
				}
			}
		});
	}

	// 초기화
	function initWhenReady() {
		setTimeout(() => {
			initAllSwipers();
			initMarkerClickEvents();
			initMobileFacilitySelect();
		}, 100);
	}

	if (document.readyState === "loading") {
		document.addEventListener("DOMContentLoaded", initWhenReady, { once: true });
	} else {
		initWhenReady();
	}
</script>