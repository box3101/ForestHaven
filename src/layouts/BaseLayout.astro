---
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
import Gotop from "../components/Gotop.astro";

const { pageTitle } = Astro.props;
---

<html lang="ko">
	<head>
		<!-- 메타 -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- 메타 eee -->

		<!-- 스타일 -->
		<link rel="stylesheet" href="../css/ui.css" />
		<!-- 스타일 eee -->

		<!-- 스크립트 -->
		<script defer src="../js/vendor/swiper.js"></script>
		<script defer src="../js/custom/common.js"></script>
		<script defer src="../js/custom/gnb.js"></script>
		<script defer src="../js/custom/slides.js"></script>
		<!-- 스크립트 eee -->

		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="skip-nav">
			<a href="#gnb" tabindex="1">주메뉴 바로가기</a>
			<a href="#contentmain" tabindex="1">본문 바로가기</a>
		</div>
		<Header />
		<slot />
		<Footer />
		<Gotop />
	</body>
</html>

